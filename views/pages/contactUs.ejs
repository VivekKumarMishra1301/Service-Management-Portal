<% var title='Contact Us Page' %>
    <% var page='Contact Us' %>
        <% var body=false %>
            <% include ../layouts/master %>
                <% include ../partials/header%>
                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Contact Us</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item">Contact Us</div>
                                </div>
                            </div>
                            <% if(successmessage !='' ){%>
                                <div class="alert alert-success alert-dismissible show fade successmessage">
                                    <div class="alert-body">
                                        <button class="close" data-dismiss="alert">
                                            <span>&times;</span>
                                        </button>
                                        <%= successmessage %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="section-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h2 class="section-title">Contact Us</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-lg-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h4>Contact Us</h4>
                                                    </div>
                                                    <div class="card-body">
                                                        <form method="POST" action="/saveContactUs"
                                                            class="needs-validation" novalidate="">
                                                            <div class="card-body">
                                                                <% if(contactUs[0].number !="" ){ %>
                                                                    <div class=" d-flex justify-content-between">
                                                                        <div class="form-group col-6">
                                                                            <label>Mobile Number</label>
                                                                            <input type="number" class="form-control"
                                                                                name="number" required=""
                                                                                placeholder="Enter your Phone Number"
                                                                                value="<%= contactUs[0].number %>"
                                                                                maxlength="10">
                                                                            <div class="invalid-feedback">
                                                                                What's your number?
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group col-6">
                                                                            <label>Email</label>
                                                                            <input type="email" class="form-control"
                                                                                name="email" required=""
                                                                                placeholder="Enter your Email"
                                                                                value="<%= contactUs[0].email %>">
                                                                            <div class="invalid-feedback">
                                                                                Oh no! Email is invalid.
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class=" d-flex justify-content-between">
                                                                        <div class="form-group col-6">
                                                                            <label>Address</label>
                                                                            <input type="text" class="form-control"
                                                                                name="address" required=""
                                                                                placeholder="Enter your Address"
                                                                                value="<%= contactUs[0].address %>">
                                                                            <div class="invalid-feedback">
                                                                                Oh no! Address is required.
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <% }else{ %>
                                                                        <div class=" d-flex justify-content-between">
                                                                            <div class="form-group col-6">
                                                                                <label>Mobile Number</label>
                                                                                <input type="tel" class="form-control"
                                                                                    name="number"
                                                                                    pattern="[789][0-9]{9}" required=""
                                                                                    placeholder="Enter your Phone Number">
                                                                                <div class="invalid-feedback">
                                                                                    Oh no! Phone number is required and
                                                                                    must be valid.
                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group col-6">
                                                                                <label>Email</label>
                                                                                <input type="email" class="form-control"
                                                                                    name="email" required=""
                                                                                    placeholder="Enter your Email">
                                                                                <div class="invalid-feedback">
                                                                                    Oh no! Email is invalid.
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class=" d-flex justify-content-between">
                                                                            <div class="form-group col-6">
                                                                                <label>Address</label>
                                                                                <input type="text" class="form-control"
                                                                                    name="address" required=""
                                                                                    placeholder="Enter your Address">
                                                                                <div class="invalid-feedback">
                                                                                    Oh no! Address is required.
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <% } %>
                                                            </div>
                                                            <div class="card-footer text-right"
                                                                style="padding-right:40px">
                                                                <button class="btn btn-primary" style="font-size: 14px;">Submit</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </section>
                    </div>
                    <% include ../partials/footer%>