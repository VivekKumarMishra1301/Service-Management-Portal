<% var title='Privacy policy Page' %>
    <% var page='Privacy & Policy' %>
        <% var body=false %>
            <% include ../layouts/master %>
                <% include ../partials/header%>
                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Privacy & Policy</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item">Privacy & Policy</div>
                                </div>
                            </div>
                            <% if(successmessage !='' ){%>
                                <div class="alert alert-success alert-dismissible show fade successmessage">
                                    <div class="alert-body">
                                        <button class="close" data-dismiss="alert">
                                            <span>&times;</span>
                                        </button>
                                        <%= successmessage %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="section-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h2 class="section-title">Privacy & Policy</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-lg-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h4>Privacy & Policy</h4>
                                                    </div>
                                                    <div class="card-body">
                                                        <form method="POST" action="/savePolicy"
                                                            class="needs-validation" novalidate="">
                                                            <div class="form-group row mb-4">
                                                                <div class="col-sm-12 col-md-12">
                                                                    <% if(privatePolicy.policy !="" ){ %>
                                                                        <textarea class="summernote-simple"
                                                                            name="policy" placeholder="Enter Privacy Policy"><%= privatePolicy[0].policy %></textarea>
                                                                        <% }else{ %>
                                                                            <textarea class="summernote" name="policy"
                                                                                placeholder="Enter Privacy Policy"></textarea>
                                                                            <% } %>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row mb-4">
                                                                <div class="col-sm-12 col-md-7">
                                                                    <button class="btn btn-primary" style="font-size: 14px;">Save</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </section>
                    </div>
                    <% include ../partials/footer%>