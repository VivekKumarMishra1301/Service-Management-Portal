<% var title='Recipes Page' %>
    <% var page='recipes' %>
        <% var body=false %>
            <% include ../../layouts/master %>
                <% include ../../partials/header%>

                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Recipes</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item"><a href="/recipes">Recipes</a></div>
                                    <div class="breadcrumb-item">Recipes Details</div>
                                </div>
                            </div>
                            <div class="section-body">
                                <h2 class="section-title d-flex justify-content-center">Hi, <%= recipe.creatorName %>!
                                </h2>
                                <p class="section-lead d-flex justify-content-center">
                                    Information about <%= recipe.creatorName %> recipe on this page.
                                </p>
                                <div class="row mt-sm-4">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <h2 class=" d-flex justify-content-center">
                                            <%= recipe.name %>
                                        </h2>
                                        <div class="profile-widget-header text-center flex-dierection-column">
                                            <video src="<%= recipe.file %>" autoplay muted controls width="500px"
                                                height="280px" style="text-align:center;border-radius:12px;"
                                                class="profile-widget-picture"></video>
                                            <div class="d-flex justify-content-center">
                                                <% for(var j=0; j < recipe.tags.length; j++) { %>
                                                    <div>
                                                        <div style="max-width:130px;max-height:20px; padding-top: 0px !important; margin-right: 20px; padding-bottom: 0px !important; text-align: center;"
                                                            class="alert alert-warning">
                                                            <%= recipe.tags[j] %>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="card profile-widget">
                                            <h3 class="section-title d-flex justify-content-center">Ingredients
                                            </h3>
                                            <div class="profile-widget-description">
                                                <%- recipe.ingredients %>
                                            </div>
                                        </div>
                                        <div class="card profile-widget">
                                            <h3 class="section-title d-flex justify-content-center">Description
                                            </h3>
                                            <div class="profile-widget-description">
                                                <%- recipe.description %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <% include ../../partials/footer%>