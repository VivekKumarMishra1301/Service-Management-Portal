<% var title='Add Booking Page' %>
    <% var page='addbooking' %>
        <% var body=false %>
            <% include ../../layouts/master %>
                <% include ../../partials/header%>
                    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
                        rel="stylesheet" />
                    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Bookings</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item"><a href="/services">Bookings</a></div>
                                    <div class="breadcrumb-item">Add</div>
                                </div>
                            </div>
                            <% if(errmessage !='' ){%>
                                <div class="alert alert-danger alert-dismissible show fade errmessage">
                                    <div class="alert-body">
                                        <button class="close" data-dismiss="alert">
                                            <span>&times;</span>
                                        </button>
                                        <%= errmessage %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="section-body">
                                        <h2 class="section-title">Add Bookings</h2>
                                        <p class="section-lead">
                                            Add user according to the form requirement .
                                        </p>
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-lg-12">
                                                <div class="card">
                                                    <form method="POST" action="/saveBooking" class="needs-validation"
                                                        novalisdate="">
                                                        <div class="card-header">
                                                            <h4>Bookings Details</h4>
                                                        </div>
                                                        <div class="card-body">
                                                            <div class=" d-flex justify-content-between">
                                                                <div class="form-group col-6">
                                                                    <label>Start Time</label>
                                                                    <input type="time" class="form-control"
                                                                        name="startTime" required=""
                                                                        placeholder="Start Time">
                                                                    <div class="invalid-feedback">
                                                                        Start time is required
                                                                    </div>
                                                                </div>
                                                                <div class="form-group col-6">
                                                                    <label>End Time</label>
                                                                    <input type="time" class="form-control"
                                                                        name="endTime" required=""
                                                                        placeholder="End Time">
                                                                    <div class="invalid-feedback">
                                                                        End time is required
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class=" d-flex justify-content-between">
                                                                <div class="form-group col-6">
                                                                    <label>Sevice Date</label>
                                                                    <input type="date" class="form-control"
                                                                        name="date" required=""
                                                                        placeholder="Enter Date">
                                                                    <div class="invalid-feedback">
                                                                        Please enter date
                                                                    </div>
                                                                </div>
                                                                <% if(servicesList.length>0){%>
                                                                    <div class="form-group col-6">
                                                                        <label>Service</label>
                                                                        <select class="form-control" name="service">
                                                                            <option value="">
                                                                                Select Service
                                                                            </option>
                                                                            <% for(var i=0;i<servicesList.length;i++){%>
                                                                                <option
                                                                                    value="<%= servicesList[i].title%>">
                                                                                    <%= servicesList[i].title %>
                                                                                </option>
                                                                                <%}%>
                                                                        </select>
                                                                        <div class="invalid-feedback">
                                                                            Select Service
                                                                        </div>
                                                                    </div>
                                                                    <%}%>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer text-right" style="padding-right:40px">
                                                            <button class="btn btn-primary" type="submit"
                                                                style="font-size: 14px;">Submit</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </section>
                    </div>
                    <% include ../../partials/footer%>