<% var title='Add User Page' %>
    <% var page='addUsers' %>
        <% var body=false %>
            <% include ../../layouts/master %>
                <% include ../../partials/header%>
                    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
                        rel="stylesheet" />
                    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Services</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item"><a href="/services">Services</a></div>
                                    <div class="breadcrumb-item">Add</div>
                                </div>
                            </div>
                            <% if(errmessage !='' ){%>
                                <div class="alert alert-danger alert-dismissible show fade errmessage">
                                    <div class="alert-body">
                                        <button class="close" data-dismiss="alert">
                                            <span>&times;</span>
                                        </button>
                                        <%= errmessage %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="section-body">
                                        <h2 class="section-title">Update Services</h2>
                                        <p class="section-lead">
                                            Add user according to the form requirement .
                                        </p>
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-lg-12">
                                                <div class="card">
                                                    <form method="POST" action="/updateservice" class="needs-validation"
                                                        novalisdate="">
                                                        <input value="<%= service._id %>" name="id"
                                                            style="display: none;" />
                                                        <div class="card-header">
                                                            <h4>Sevices Details</h4>
                                                        </div>
                                                        <div class="card-body">
                                                            <div class=" d-flex justify-content-between">
                                                                <div class="form-group col-6">
                                                                    <label>Title</label>
                                                                    <input type="text" class="form-control"
                                                                        pattern="([A-zÀ-ž\s]){2,}" name="title"
                                                                        required="" value="<%= service.title %>"
                                                                        placeholder="Enter Title">
                                                                    <div class="invalid-feedback">
                                                                        What's the title ?
                                                                    </div>
                                                                </div>
                                                                <div class="form-group col-6">
                                                                    <label>Service Type</label>
                                                                    <select class="form-control" name="serviceType">
                                                                        <option value="<%= service.serviceType %>">
                                                                            <%= service.serviceType %>
                                                                        </option>
                                                                        <option value="Service">Service</option>
                                                                        <option value="Repair">Repair</option>
                                                                        <option value="Installation/Uninstallation">
                                                                            Installation/Uninstallation</option>
                                                                    </select>
                                                                    <div class="invalid-feedback">
                                                                        select service type
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class=" d-flex justify-content-between">
                                                                <div class="form-group col-6">
                                                                    <label>Service Amount</label>
                                                                    <input type="number" class="form-control"
                                                                        name="amount" required="" value="<%= service.amount %>"
                                                                        placeholder="Enter Amount">
                                                                    <div class="invalid-feedback">
                                                                        Please enter Amount
                                                                    </div>
                                                                </div>
                                                                <div class="form-group col-6">
                                                                    <label>Service Time</label>
                                                                    <input type="number" class="form-control" value="<%= service.serviceTime %>"
                                                                        name="serviceTime" required=""
                                                                        placeholder="Enter Time">
                                                                    <div class="invalid-feedback">
                                                                        Service time is required and must be valid.
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class=" form-group col-sm-12 col-md-12 col-lg-12">
                                                                <label>Description</label>
                                                                <textarea class="summernote" name="description"
                                                                    placeholder="Enter Description"><%= service.description %></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer text-right" style="padding-right:40px">
                                                            <button class="btn btn-primary" type="submit"
                                                                style="font-size: 14px;">Submit</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </section>
                    </div>
                    <% include ../../partials/footer%>