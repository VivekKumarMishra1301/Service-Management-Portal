<% var title='User Profile Page' %>
    <% var page='profile' %>
        <% var body=false %>
            <% include ../../layouts/master %>
                <% include ../../partials/header%>
                    <div class="main-content">
                        <section class="section">
                            <div class="section-header">
                                <h1>Profile</h1>
                                <div class="section-header-breadcrumb">
                                    <div class="breadcrumb-item active"><a href="/dashboardAdminLogin">Dashboard</a>
                                    </div>
                                    <div class="breadcrumb-item"><a href="/users">Users</a></div>
                                    <div class="breadcrumb-item">Profile</div>
                                </div>
                            </div>
                            <div class="section-body">
                                <h2 class="section-title">Hi, <%= user.name %>!</h2>
                                <p class="section-lead">
                                    Information about <%= user.name %> on this page.
                                </p>
                                <div class="row mt-sm-4">
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <div class="card profile-widget">
                                            <div class="profile-widget-header">
                                                <img alt="image" src="<%= user.image %>" style="height:100px;"
                                                    class="rounded-circle profile-widget-picture">
                                            </div>
                                            <div class="profile-widget-description">
                                                <div class="profile-widget-name">
                                                    <%= user.name %>
                                                </div>
                                                    <%if(user.description!=""){%>
                                                        <div id="description">
                                                            <%- user.description %>
                                                        </div>
                                                        <%}%>
                                                            <div class="d-flex ">
                                                                <div class="profile-widget-name mt-3">Phone Number :
                                                                </div>
                                                                <div class="profile-widget-name mt-3 ml-2">
                                                                    <%= user.phoneNumber %>
                                                                </div>
                                                            </div>
                                                            <div class="d-flex ">
                                                                <div class="profile-widget-name mt-3">Email :
                                                                </div>
                                                                <div class="profile-widget-name mt-3 ml-2">
                                                                    <%= user.email %>
                                                                </div>
                                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <% include ../../partials/footer%>